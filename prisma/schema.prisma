generator client {
  provider = "go run github.com/steebchen/prisma-client-go"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int    @id @default(autoincrement())
  FirstName String
  LastName  String
  Email     String @unique
  Password  String
  Username  String @unique
}

model Otp {
  id        Int      @id @default(autoincrement())
  Username  String   @unique
  FirstName String
  LastName  String
  Email     String   @unique
  Otp       String
  ExpiresAt DateTime
  Password  String

  @@map("Otp")
}

model Question {
  id            Int    @id @default(autoincrement())
  Title         String
  Description   String
  StarterSchema String
  StarterData   String
  CorrectQuery  String
  EndingSchema String
}

// //Added by Gkrrr
model TablesInfo {
  id          Int    @id @default(autoincrement())
  tableName   String
  Description String
  querry      String
  CreatedBy String
  CreatedAt DateTime @default(now())

  @@map("TablesInfo")
}

model QuestionRecords {
  id              Int       @id @default(autoincrement())
  ContributedBy   String
  Title           String
  Description     String
  Topics          String[]
  UsedTables      String[]
  CreatedAt       DateTime  @default(now())
  DifficultyLevel String
  Rewards         Int?       // optional field to store reward points
  Answer          String?    // optional field to store the answer query

  @@map("QuestionRecords")
}

